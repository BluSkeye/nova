<UserControl x:Class="ssi.GeometricListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ssi"
    Height="Auto" Width="Auto">

    <UserControl.Resources>
        <local:ValueRoundConverter x:Key="roundConverter" />
    </UserControl.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" BorderThickness="2" Margin="5,5,5,0">

            <ListView Name="geometricDataGrid">
                <ListView.ContextMenu>
                    <ContextMenu Name="InvoiceDetailsList" StaysOpen="true">
                        <ContextMenu.BitmapEffect>
                            <BitmapEffectGroup />
                        </ContextMenu.BitmapEffect>
                        <MenuItem Header="Delete" Name="MenuItemDeleteClick"/>
                        <Separator></Separator>
                        <MenuItem Header="Set Confidence to 0" Click="MenuItemSetConfidenceZeroClick" />
                        <MenuItem Header="Set Confidence to 1" Click="MenuItemSetConfidenceOneClick" />
                    </ContextMenu>
                </ListView.ContextMenu>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Label}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader Tag="Label" Click="GridViewColumnHeader_Click">Label</GridViewColumnHeader>
                            </GridViewColumn.Header>
                        </GridViewColumn>

                        <GridViewColumn Width="Auto" Header="X">
                            <GridViewColumn.DisplayMemberBinding>
                                <Binding Path="XCoord" Converter="{StaticResource roundConverter}" />
                            </GridViewColumn.DisplayMemberBinding>
                        </GridViewColumn>

                        <GridViewColumn Width="Auto"  Header="Y">
                            <GridViewColumn.DisplayMemberBinding>
                                <Binding Path="YCoord" Converter="{StaticResource roundConverter}" />
                            </GridViewColumn.DisplayMemberBinding>
                        </GridViewColumn>

                        <GridViewColumn Width="Auto" Header="Confidence" DisplayMemberBinding="{Binding Confidence}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <Grid Grid.Column="0" Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <RadioButton x:Name="fullBodyRB"    Width="Auto" Grid.Column="0" Grid.Row="0" Height="25" Margin="5,0,5,0" GroupName="bodyType" IsChecked="True">Full Body</RadioButton>
            <RadioButton x:Name="upperBodyRB"   Width="Auto" Grid.Column="1" Grid.Row="0" Height="25" Margin="5,0,5,0" GroupName="bodyType">Upper Body</RadioButton>
            <RadioButton x:Name="lowerBodyRB"   Width="Auto" Grid.Column="2" Grid.Row="0" Height="25" Margin="5,0,5,0" GroupName="bodyType">Lower Body</RadioButton>
            <RadioButton x:Name="partialBodyRB" Width="Auto" Grid.Column="3" Grid.Row="0" Height="25" Margin="5,0,5,0" GroupName="bodyType">Partial Body</RadioButton>

            <RadioButton x:Name="fullyClothedRB"        Width="Auto" Grid.Column="0" Grid.Row="1" Height="25" Margin="5,0,5,0" GroupName="clothingType" IsChecked="True">Fully Clothed</RadioButton>
            <RadioButton x:Name="partiallyClothedRB"    Width="Auto" Grid.Column="1" Grid.Row="1" Height="25" Margin="5,0,5,0" GroupName="clothingType">Partially Clothed</RadioButton>
            <RadioButton x:Name="nakedRB"               Width="Auto" Grid.Column="2" Grid.Row="1" Height="25" Margin="5,0,5,0" GroupName="clothingType">Naked</RadioButton>

            <RadioButton x:Name="maleRB"                 Width="Auto" Grid.Column="0" Grid.Row="2" Height="25" Margin="5,0,5,0" GroupName="gender" IsChecked="True">Male</RadioButton>
            <RadioButton x:Name="femaleRb"               Width="Auto" Grid.Column="1" Grid.Row="2" Height="25" Margin="5,0,5,0" GroupName="gender">Female</RadioButton>

            <Button Name="selectAllButton" Width="Auto" Grid.Column="0" Grid.Row="3" Height="25" Margin="5,0,5,0">Select All</Button>
            <Button Name="doneButton" Width="Auto" Grid.Column="1" Grid.Row="3" Height="25" Margin="5,0,5,0">Done</Button>
            <Button Name="copyButton" Width="Auto" Grid.Column="4" Grid.Row="3" Height="25" Margin="7,5,5,5">Copy all to next frame</Button>
        </Grid>
    </Grid>
</UserControl>